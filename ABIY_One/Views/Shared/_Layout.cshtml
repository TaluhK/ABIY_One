<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ABIY T-Shirts</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ABIY T-Shirts", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    @if (!User.IsInRole("Admin") && !User.IsInRole("Designer"))
                    {
                        <li>
                            <a href="@Url.Action("Index","Shopping")">
                                <i class="fa fa-shopping-bag"></i> Shop T-Shirts
                            </a>
                        </li>

                        <li class="dropdown">
                            <a href="@Url.Action("ShoppingCart", "Shopping")" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> <span class="fa fa-shopping-cart"></span> Cart (@Html.Action(actionName: "countCartItems", controllerName: "Shopping"))<span class="caret"></span></a>
                            <ul class="dropdown-menu dropdown-cart" role="menu" style="background: #000000;color:rgba(107, 37, 37, 1)">
                                <li class="divider"></li>
                                <li>
                                    <a class="btn btn-default" href="@Url.Action("ShoppingCart", "Shopping")">
                                        <i class="fa fa-shopping-cart"></i> View Cart
                                    </a>
                                </li>

                            </ul>
                        </li>
                        <li>@Html.ActionLink("View Designs", "ViewDesigns", "Designs")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    }
                    @if (User.IsInRole("Admin"))
                    {


                        <li>@Html.ActionLink("Go to Dashboard", "Index", "Products")</li>

                    }
                    <li class="dropdown">
                        @if (User.IsInRole("Designer"))
                        {


                            @*<li>@Html.ActionLink("Manage Designs", "Index", "Design")</li>*@
                            <a href="@Url.Action("Index", "Designs")" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> <span class="fa fa-sliders"></span> Manage Designs<span class="caret"></span></a>
                            <ul class="dropdown-menu dropdown-cart" role="menu" style="background: #000000;color:rgba(107, 37, 37, 1)">
                                <li>
                                    <a class="btn btn-default" href="@Url.Action("Create", "DesignTypes")">
                                        <i class="fa fa-plus"></i> Add Design Type
                                    </a>
                                </li>
                                <li>
                                    <a class="btn btn-default" href="@Url.Action("Index", "DesignTypes")">
                                        <i class="fa fa-list"></i> View Design Types
                                    </a>
                                </li>
                                <li class="divider"></li>

                                <li>
                                    <a class="btn btn-default" href="@Url.Action("Create", "DesignAreas")">
                                        <i class="fa fa-plus"></i> Add Design Area
                                    </a>
                                </li>
                                <li>
                                    <a class="btn btn-default" href="@Url.Action("Index", "DesignAreas")">
                                        <i class="fa fa-list"></i> View Design Areas
                                    </a>
                                </li>
                            </ul>
                        <li>@Html.ActionLink("Add New Design", "Create", "Designs")</li>

                    }

                        </li>
                    </ul>
                        @Html.Partial("_LoginPartial")
</div>
       </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
        <center>    <p>&copy; @DateTime.Now.Year -Group {14} Developers</p></center>
        </footer>
    </div>

    <!-- footer -->
    <footer id="aa-footer">
        <!-- footer bottom -->
        <div class="aa-footer-top">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-footer-top-area">
                            <div class="row">
                                <div class="col-md-3 col-sm-6">
                                    <div class="aa-footer-widget">
                                        <h3>Main Menu</h3>
                                        <ul class="aa-footer-nav">
                                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                            <li><a href="#">Our Services</a></li>
                                            <li><a href="#">Our Products</a></li>
                                            <li>@Html.ActionLink("About Us", "About", "Home")</li>
                                            <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <div class="aa-footer-widget">
                                        <div class="aa-footer-widget">
                                            <h3>Knowledge Base</h3>
                                            <ul class="aa-footer-nav">
                                                <li><a href="#">Delivery</a></li>
                                                <li><a href="#">Returns</a></li>
                                                <li><a href="#">Services</a></li>
                                                <li><a href="#">Discount</a></li>
                                                <li><a href="#">Special Offer</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <div class="aa-footer-widget">
                                        <div class="aa-footer-widget">
                                            <h3>Useful Links</h3>
                                            <ul class="aa-footer-nav">
                                                <li><a href="#">Search</a></li>
                                                <li><a href="#">Advanced Search</a></li>
                                                <li><a href="#">Suppliers</a></li>
                                                <li><a href="#">FAQ</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <div class="aa-footer-widget">
                                        <div class="aa-footer-widget">
                                            <h3>Contact Us</h3>
                                            <address>
                                                <p> WestStreet Durban 4000</p>
                                                <p><span class="fa fa-phone"></span>031-509-5247</p>
                                                <p><span class="fa fa-envelope"></span>help@abiy.com</p>
                                            </address>
                                            <div class="aa-footer-social">
                                                <a href="#"><span class="fa fa-facebook"></span></a>
                                                <a href="#"><span class="fa fa-twitter"></span></a>
                                                <a href="#"><span class="fa fa-google-plus"></span></a>
                                                <a href="#"><span class="fa fa-youtube"></span></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
  

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


</body>
</html>
